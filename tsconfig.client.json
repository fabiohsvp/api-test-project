{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "./public",
    "rootDir": "./src/client",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/client/**/*"],
  "exclude": ["node_modules"]
}